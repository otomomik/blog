---
import { getCollection } from 'astro:content'
import Layout from '../../../layouts/Layout.astro'
import { createHref } from '../../../utils'

const url = Astro.url
const tags = (await getCollection('blog')).map((b) => b.data.tags).flat()
---

<Layout title="タグ一覧">
  <h1>タグ一覧</h1>
  {
    tags.map((t) => (
      <a href={createHref({ path: `/tags/${t}`, url })}>
        <h2>{t}</h2>
      </a>
    ))
  }
</Layout>
